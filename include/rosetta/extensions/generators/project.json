{
    "variables": {
        "PROJECT_ROOT": "/path/to/your/project",
        "ROSETTA_ROOT": "/path/to/rosetta",
        "BUILD_DIR": "${PROJECT_ROOT}/build"
    },
    "project": {
        "name": "pyarch3",
        "version": "1.0.0",
        "description": "arch3 auto-generated bindings",
        "author": "xaliphostes",
        "license": "MIT"
    },
    
    "rosetta": {
        "registration_header": "generator/rosetta_binding.h",
        "registration_namespace": "",
        "registration_function": "register_rosetta",
        "types_namespace": "",
        "cpp_namespaces": {
            "strip": true,
            "separator": ""
        }
    },
    
    "sources": {
        "mode": "static",
        "base_dir": "${PROJECT_ROOT}/src",
        "files": [
            "src/core/Model.cpp",
            "src/core/Solver.cpp"
        ],
        "glob_patterns": [
            "src/**/*.cpp",
            "src/**/*.cxx"
        ],
        "exclude_patterns": [
            "**/test/**",
            "**/*_test.cpp",
            "**/examples/**",
            "**/main.cpp"
        ]
    },
    
    "includes": {
        "directories": [
            "${PROJECT_ROOT}/include",
            "${PROJECT_ROOT}/extern/eigen",
            "${PROJECT_ROOT}/extern/krylov/include",
            "${ROSETTA_ROOT}/include"
        ],
        "headers": [],
        "library_directories": [
            "${PROJECT_ROOT}/../bin"
        ],
        "libraries": [
            "Arch3"
        ]
    },
    
    "output": {
        "base_dir": "./generated"
    },
    
    "targets": {
        "python": {
            "enabled": true,
            "link_mode": "dynamic",
            "extra_sources": [],
            "extra_libs": [],
            "output_dir": ""
        },
        "wasm": {
            "enabled": true,
            "link_mode": "static",
            "sources": {
                "glob_patterns": ["src/**/*.cpp"],
                "exclude_patterns": ["**/test/**"]
            },
            "environment": "web,node",
            "export_es6": false,
            "single_file": true,
            "output_dir": ""
        },
        "javascript": {
            "enabled": true,
            "link_mode": "static",
            "extra_sources": [],
            "extra_libs": [],
            "output_dir": ""
        },
        "rest": {
            "enabled": false,
            "output_dir": ""
        }
    },
    
    "options": {
        "generate_cmake": true,
        "generate_readme": true,
        "generate_example": true,
        "generate_stubs": true,
        "generate_typescript": true
    },
    
    "advanced": {
        "numpy_types": ["Vector3", "Matrix33", "std::vector<double>"],
        "skip_classes": [],
        "skip_methods": []
    }
}